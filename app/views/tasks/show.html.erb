<%= link_to "< back to to-do-list", tasks_path %>
<h2><%= @task.name %></h2>
<p><%= @task.details %></p>
<p>Done:<%= @task.done %></p>
<p>Created on: <%= @task.created_at %></p>
<p>Updated on: <%= @task.updated_at %></p>
<%= link_to "Edit this task", edit_task_path(@task) %>
<br>
<%= link_to "Delete this task", task_path(@task.id),
  method: :delete,
  data: { confirm: "Are you sure?" } %>
<br>

