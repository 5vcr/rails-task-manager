<h2>To-do-list:</h2>
<% @tasks.each do |task| %>
  <%= link_to task.name, task_path(task)%>
  Done:<%= task.done %>
  <%= link_to "Delete", task_path(task),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
  <%= link_to "Edit", edit_task_path(task) %>
  <br>
<% end %>
  <%= link_to "New task", new_task_path %>
